<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/lv2_reback_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lv2_reback_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/video_black"
                tools:text="小编回复：测试测试测试测试测试测试测试测试测试测试测试测试">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lv2_reback_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/video_c9"
                tools:text="2021-12-31"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="回复"
                android:textColor="@color/video_c9"
                android:textSize="10sp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv2_extend_cos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/lv2_load_more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/video_black"
            tools:text="李* 等人共10条回复"></TextView>
        <TextView
            android:id="@+id/lv2_load_more_extend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bz_red"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:textSize="13sp"
            android:text="展开"></TextView>
    </LinearLayout>

</LinearLayout>