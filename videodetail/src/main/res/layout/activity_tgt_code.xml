<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dianzan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray4"
    tools:context="ui.activity.TgtCodeActivity">

    <common.widget.YALikeAnimationView
        android:id="@+id/like_love"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </common.widget.YALikeAnimationView>

    <EditText
        android:id="@+id/wdTgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"></EditText>

    <EditText
        android:id="@+id/localTgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wdTgt"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"></EditText>

    <EditText
        android:id="@+id/gdyTgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/localTgt"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/white"></EditText>

    <EditText
        android:id="@+id/localToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gdyTgt"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/white"></EditText>

    <TextView
        android:id="@+id/getWdtgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/localToken"
        android:background="@color/video_black"
        android:padding="20dp"
        android:text="调用万达获取tgt"
        android:textColor="@color/white"></TextView>


</RelativeLayout>